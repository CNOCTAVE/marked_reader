{
    "appId": "cn.cnoctave.marked_reader",
    "productName": "marked_reader",
    "buildNumber": "3.1.0",
    "icon": "logo.png",
    "directories": {
        "output": "dist"
    },
    "publish": [
        {
        "provider": "github",
        "owner": "CNOCTAVE",
        "repo": "marked_reader",
        "releaseType": "release"
        }
    ],
    "linux": {
        "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
        "target": [
            {
                "target": "AppImage",
                "arch": [
                    "x64",
                    "armv7l",
                    "arm64"
                ]
            }
        ]
    }
}