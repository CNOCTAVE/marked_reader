{
    "name": "marked-reader",
    "author": "Yu Hongbo <yuhongbo@member.fsf.org>, CNOCTAVE <cnoctave@qq.com>",
    "email": "cnoctave@qq.com",
    "version": "1.3.0",
    "description": "marked_reader is an open source Markdown reader packed by Electron",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-packager . --all",
        "build-linux": "electron-builder --linux",
        "build-win": "electron-builder --win",
        "dist": "electron-builder --publish"
    },
    "build": {
        "appId": "cn.cnoctave.marked_reader",
        "productName": "marked_reader",
        "buildNumber": "1.3.0",
        "icon": "logo.png",
        "directories": {
            "output": "dist"
        },
        "publish": [
          {
            "provider": "github",
            "owner": "CNOCTAVE",
            "repo": "marked_reader",
            "releaseType": "release"
          }
        ],
        "win": {
            "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32",
                        "arm64"
                    ]
                },
                {
                    "target": "nsis-web",
                    "arch": [
                        "x64",
                        "ia32",
                        "arm64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64",
                        "ia32",
                        "arm64"
                    ]
                },
                {
                    "target": "msi",
                    "arch": [
                        "x64",
                        "ia32",
                        "arm64"
                    ]
                },
                {
                    "target": "7z",
                    "arch": [
                        "x64",
                        "ia32",
                        "arm64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "ia32",
                        "arm64"
                    ]
                },
                {
                    "target": "tar.xz",
                    "arch": [
                        "x64",
                        "ia32",
                        "arm64"
                    ]
                },
                {
                    "target": "tar.lz",
                    "arch": [
                        "x64",
                        "ia32",
                        "arm64"
                    ]
                },
                {
                    "target": "tar.gz",
                    "arch": [
                        "x64",
                        "ia32",
                        "arm64"
                    ]
                },
                {
                    "target": "tar.bz2",
                    "arch": [
                        "x64",
                        "ia32",
                        "arm64"
                    ]
                }
            ]
        }
    },
    "devDependencies": {
        "electron": "^32.2.0",
        "electron-builder": "^25.1.8",
        "marked": "^14.1.2",
        "winston": "^3.15.0"
    },
    "dependencies": {
        "marked": "^14.1.2",
        "winston": "^3.15.0"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    }
}
